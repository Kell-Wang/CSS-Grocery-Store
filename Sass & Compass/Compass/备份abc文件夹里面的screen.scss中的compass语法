.error{
  color:#f00;
}

.serious-error{
  @extend .error;    //明确指定一个选择器去继承另一个选择器的样式
  height:30px;
  border:1px solid #f00;
}


.main-sec{
  font-family:$main-sec-ff;

  @at-root{
    .main-sec-headline{
      font:{
        family:$main-sec-ff;
        size:16px;
      }
    }

    .main-sec-detail{
      font-size:12px;
    }
  }
}

